{% extends 'base.html.twig' %}

{% block body %}
    <h1>ParisObject</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ parisObject.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ parisObject.name }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ parisObject.price }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ parisObject.description }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ parisObject.type }}</td>
            </tr>
            <tr>
                <th>Thumbnail</th>
                <td>{{ parisObject.thumbnail }}</td>
            </tr>
            <tr>
                <th>Album</th>
                <td>{{ parisObject.album }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('object_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('object_edit', { 'id': parisObject.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
